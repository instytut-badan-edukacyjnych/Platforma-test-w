<resources>

    <style name="LoremIpsumTheme" parent="LoremTheme">
        <item name="android:windowBackground">@color/gray_light</item>
        <item name="android:actionBarStyle">@style/LoremIpsumActionBar</item>
    </style>

    <style name="LoremIpsumTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LoremIpsumActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/top_bar</item>
    </style>

    <style name="BackgroundLoremIpsum" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <!--<item name="android:background">@color/gray_light</item>-->
        <!--<item name="android:text">@string/lorem_ipsum</item>-->
    </style>

    <style name="BackgroundLoginLoremIpsum" parent="BackgroundLoremIpsum">
        <item name="android:textColor">#b2FFFFFF</item>
        <item name="android:background">#d5d5d5</item>
        <item name="android:text">@string/lorem_ipsum</item>
    </style>

    <style name="UeInfo" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_black</item>
    </style>

    <style name="Default" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/font_gray</item>
    </style>

    <style name="Default.Login" parent="android:TextAppearance">
        <item name="android:textColor">@color/button_login_font</item>
    </style>


    <style name="Default.Big">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Default.Big.AllCaps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Default.Big.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Default.Big.Bold.AllCaps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Default.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Default.Small.Warning">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="Form" parent="Default">
        <item name="android:gravity">bottom</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="Support"/>
    <style name="Support.Response"/>

    <style name="Support.Response.Details">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Support.Response.Field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Support.Response.Field.Key"/>
    <style name="Support.Response.Field.Value">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
</resources>